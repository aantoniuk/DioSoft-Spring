<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

    <bean id="postman" class="org.diosoft.spring.lesson3.Postman"></bean>

    <bean id="personEventListener1" class="org.diosoft.spring.lesson3.PersonEventListener"></bean>
    <bean id="personEventListener2" class="org.diosoft.spring.lesson3.PersonEventListener"></bean>

    <bean class="org.springframework.beans.factory.config.PreferencesPlaceholderConfigurer">
        <property name="location" value="lesson3.properties"></property>
    </bean>

    <util:list id="personNameList">
        <value>${first}</value>
        <value>${second}</value>
        <value>${third}</value>
    </util:list>

    <bean id="postman2" class="org.diosoft.spring.lesson3.Postman2">
        <constructor-arg ref="personNameList"></constructor-arg>
    </bean>

</beans>